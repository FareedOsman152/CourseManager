@model CourseDeptInstru
@{
    ViewData["Title"] = "AddNew";
}

<h1>AddNew</h1>

<form asp-action="SaveAdded" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" value="@Model?.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Hours"></label>
        <input class="form form-control" asp-for="Hours"  />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Degree"></label>
        <input class="form form-control" asp-for="Degree" value="@Model?.Degree" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="MinDegree"></label>
        <input class="form form-control" asp-for="MinDegree" value="@Model?.MinDegree" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>

    <div>
        <label>Department</label>
        <select name="DepartmentId" class="form-check" asp-for="DepartmentId">
            @foreach (var d in Model.Departments)
            {
                <option value="@d.Id">@d.Name</option>
            }
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <input type="submit" name="Add" value="Add" class="btn btn-primary" />
</form>

