@model List<Instructor>
@{
    ViewData["Title"] = "ShowAllInstructors";
}

@if (Model.Count == 0)
{
    <h1 style="color:red">There Is No Instructors</h1>
}
else
{
    <h1>ShowAllInstructors</h1>

    <div>
        <a href="/Instructor/AddNew" class="btn btn-success">Add New</a>
    </div>

    <table class="table table-hover table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Salary</th>
            <th>dept id</th>
            <th>crs id</th>
            <th>Details</th>  @* عمود جديد *@
            <th>Edit</th>  
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.Address</td>
                <td>@i.Salary</td>
                <td>@i.DepartmentId</td>
                <td>@i.CourseId</td>
                <td>
                    <a asp-controller="Instructor" asp-action="Details" asp-route-id="@i.Id" class="btn btn-info">Show Details</a>
                </td>
                <td>
                    <a asp-controller="Instructor" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-info">Edit </a>
                </td>
            </tr>
        }
    </table>
}
